{
    "info": {
        "_postman_id": "ober-admin-dashboard-apis",
        "name": "O-Ber Admin Dashboard APIs",
        "description": "Complete Admin Dashboard APIs for O-Ber ride-sharing platform. All admin endpoints require Bearer token authentication.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000/api/v1",
            "type": "string"
        },
        {
            "key": "access_token",
            "value": "",
            "type": "string"
        }
    ],
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{access_token}}",
                "type": "string"
            }
        ]
    },
    "item": [
        {
            "name": "1. Authentication",
            "description": "Admin login and token management",
            "item": [
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.tokens && jsonData.tokens.access) {",
                                    "    pm.collectionVariables.set('access_token', jsonData.tokens.access);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"login_id\": \"admin@ober.com\",\n    \"password\": \"your_password\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "login",
                                ""
                            ]
                        },
                        "description": "Login with admin credentials. Access token is auto-saved to collection variables."
                    },
                    "response": []
                },
                {
                    "name": "Refresh Token",
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"refresh\": \"your_refresh_token\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/token/refresh/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "token",
                                "refresh",
                                ""
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
